        </Menu>
        <!-- parameters on the left of the screen -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <TextBlock Name="currentPace" Text="1" />
            <TextBlock Name="currentThreads" Text="2" />
            <CheckBox Name="classVersion" Content="class version" Margin="0,0,8,0"
                VerticalAlignment="Center" IsChecked="False" />
            <TextBlock Name="boardSizeText" Width="20" TextAlignment="Right"
                  VerticalAlignment="Center" Margin="0,0,8,0">
        <TextBlock.Text>
          <Binding ElementName="boardSize" Path="Value">
            <Binding.Converter>
              <con:TypeConverter TargetType="{x:Type my:Int32}" />
            </Binding.Converter>
          </Binding>
        </TextBlock.Text>
            </TextBlock>
            <Slider Grid.Column="1" Name="boardSize" Minimum="3"
         Value="{Binding BoardSize}" Maximum="50"
         SmallChange="1" Orientation="Vertical" />
        </StackPanel>
        <!-- board of the Conway's Game of Life -->
        <ItemsControl Grid.Row="1" Grid.Column="1"
                  ItemsSource="{Binding Rectangles}" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Background="Beige">
                    </UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <!-- parameters on the bottom of the screen -->
        <StackPanel  Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <CheckBox Name="enableLife" Content="life happens" Margin="0,0,8,0"
                VerticalAlignment="Center" IsChecked="{Binding LifeEnabled}">
                <CheckBox.Visibility>
                    <Binding ElementName="classVersion" Path="IsChecked">
                        <Binding.Converter>
                            <con:MapConverter>
                                <con:Mapping To="{x:Static Visibility.Collapsed}">
                                    <con:Mapping.From>
                                        <my:Boolean>
                                            True
                                        </my:Boolean>
                                    </con:Mapping.From>
                                </con:Mapping>
                                <con:Mapping To="{x:Static Visibility.Visible}">
                                    <con:Mapping.From>
                                        <my:Boolean>
                                            False
                                        </my:Boolean>
                                    </con:Mapping.From>
                                </con:Mapping>
                            </con:MapConverter>
                        </Binding.Converter>
                    </Binding>
                </CheckBox.Visibility>
            </CheckBox>
        </StackPanel>
    </Grid>
