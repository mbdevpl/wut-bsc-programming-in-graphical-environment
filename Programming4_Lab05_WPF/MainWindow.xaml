    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- main menu -->
        <Menu Grid.Row="0" Grid.ColumnSpan="2" Name="mainMenu">
            <MenuItem Header="Game">
                <MenuItem Header="About" />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Pace">
                <MenuItem Header="Slow" />
                <MenuItem Header="Moderate" />
                <MenuItem Header="Fast" />
            </MenuItem>
            <MenuItem Header="Threads">
                <MenuItem Header="1" IsCheckable="True">
                    <MenuItem.IsChecked>
                        <Binding ElementName="currentThreads" Path="Text">
                            <Binding.Converter>
                                <con:MapConverter>
                                    <con:Mapping To="True">
                                        <con:Mapping.From>
                                            <my:String>1</my:String>
                                        </con:Mapping.From>
                                    </con:Mapping>
                                    <con:Mapping To="False">
                                        <con:Mapping.From>
                                            <my:String>2</my:String>
                                        </con:Mapping.From>
                                    </con:Mapping>
                                </con:MapConverter>
                            </Binding.Converter>
                        </Binding>
                    </MenuItem.IsChecked>
                </MenuItem>
                <MenuItem Header="2" IsCheckable="True" >
                    <MenuItem.IsChecked>
                        <Binding ElementName="currentThreads" Path="Text">
                            <Binding.Converter>
                                <con:MapConverter>
                                    <con:Mapping To="False">
                                        <con:Mapping.From>
                                            <my:String>1</my:String>
                                        </con:Mapping.From>
                                    </con:Mapping>
                                    <con:Mapping To="True">
                                        <con:Mapping.From>
                                            <my:String>2</my:String>
                                        </con:Mapping.From>
                                    </con:Mapping>
                                </con:MapConverter>
                            </Binding.Converter>
                        </Binding>
                    </MenuItem.IsChecked>
                </MenuItem>
